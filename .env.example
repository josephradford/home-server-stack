# Server Configuration
SERVER_IP=192.168.1.100
TIMEZONE=UTC

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=your_secure_password_here
N8N_SECURE_COOKIE=true
N8N_EDITOR_BASE_URL=https://your-domain:5678
N8N_PROTOCOL=https
N8N_SSL_KEY=/ssl/server.key
N8N_SSL_CERT=/ssl/server.crt

# n8n Performance and Future Compatibility
DB_SQLITE_POOL_SIZE=5
N8N_RUNNERS_ENABLED=true
N8N_BLOCK_ENV_ACCESS_IN_NODE=false
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS=true
N8N_RUNNERS_TASK_TIMEOUT=1800
EXECUTIONS_TIMEOUT=1800
EXECUTIONS_TIMEOUT_MAX=3600

# Ollama Configuration
OLLAMA_NUM_PARALLEL=2
OLLAMA_MAX_LOADED_MODELS=2
OLLAMA_LOAD_TIMEOUT=600

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_password

# AlertManager Configuration
WEBHOOK_URL=http://127.0.0.1:5001/
ALERT_EMAIL_FROM=alerts@homeserver.local
ALERT_EMAIL_USER=alerts@your-domain.com
ALERT_EMAIL_PASS=your_email_app_password
ALERT_EMAIL_TO=admin@your-domain.com

# WireGuard VPN Configuration
WIREGUARD_SERVERURL=your-public-ip-or-domain.com
WIREGUARD_PORT=51820
WIREGUARD_PEERS=5
WIREGUARD_SUBNET=10.13.13.0/24
# CRITICAL: Split tunneling - only route home network traffic through VPN
# DO NOT use 0.0.0.0/0 unless you want full tunneling (not recommended for security)
# This ensures only home network (192.168.1.0/24) and VPN subnet (10.13.13.0/24) traffic routes through VPN
WIREGUARD_ALLOWEDIPS=192.168.1.0/24,10.13.13.0/24
WIREGUARD_KEEPALIVE=25
WIREGUARD_LOG_CONFS=true

# Habitica Configuration - Gamified habit and task tracker
# Accessible via VPN at http://SERVER_IP:8080
HABITICA_VERSION=latest
HABITICA_MONGO_VERSION=5.0
HABITICA_BASE_URL=http://192.168.1.100:8080
HABITICA_INVITE_ONLY=false

# Habitica Email (Optional - for notifications and password reset)
HABITICA_EMAIL_SERVER_URL=
HABITICA_EMAIL_SERVER_PORT=587
HABITICA_EMAIL_AUTH_USER=
HABITICA_EMAIL_AUTH_PASSWORD=
HABITICA_ADMIN_EMAIL=

# Bookwyrm Configuration - Social reading and book tracking
# Accessible via VPN at http://SERVER_IP:8000
BOOKWYRM_DOMAIN=bookwyrm.local
BOOKWYRM_SECRET_KEY=your_very_long_secret_key_here_at_least_50_characters
BOOKWYRM_USE_HTTPS=false

# Bookwyrm Database
BOOKWYRM_DB_USER=bookwyrm
BOOKWYRM_DB_PASSWORD=your_secure_bookwyrm_db_password
BOOKWYRM_DB_NAME=bookwyrm

# Bookwyrm Redis (Activity and Task Queue)
BOOKWYRM_REDIS_ACTIVITY_PASSWORD=your_secure_redis_activity_password
BOOKWYRM_REDIS_BROKER_PASSWORD=your_secure_redis_broker_password

# Bookwyrm Email (Optional - for notifications and invitations)
# Leave empty to use safe defaults (localhost) - emails won't be sent but app won't crash
# To enable email, set BOOKWYRM_EMAIL_HOST to your SMTP server (e.g., smtp.gmail.com)
BOOKWYRM_EMAIL_HOST=
BOOKWYRM_EMAIL_PORT=587
BOOKWYRM_EMAIL_USER=
BOOKWYRM_EMAIL_PASSWORD=
BOOKWYRM_EMAIL_USE_TLS=true
BOOKWYRM_EMAIL_USE_SSL=false
BOOKWYRM_EMAIL_SENDER_NAME=BookWyrm
BOOKWYRM_EMAIL_SENDER_DOMAIN=
